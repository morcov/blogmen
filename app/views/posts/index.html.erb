<h1>Listing posts</h1>

  <table id="posts_table">
    <tbody id="tasks_list" >
    <% @posts.each do |post| %>
  
       <tr id="post_<%= post.id %>" align="center">
         <td class="handle">[drag]</td><td><b><%= link_to post.title, post_path(post) %></b></td>
       </tr>
       <tr>
         <td colspan="2"><%= post.text %></td> 
       </tr>
       <tr> 
         <td>author: <b><%= post.get_parent_name %></b></td>
         <td>date: <b><%= post.created_at+3600+3600+3600 %></b></td>
       </tr>
       <tr>
      <% if current_user %>
       <% if current_user.id == post.user_id %>
         <td><%= link_to 'Edit', edit_post_path(post) %></td>
         <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <% end %>
      <% end %>
       </tr>
       <tr> 
        <td colspan="2">&nbsp </td>
       </tr>
   
    <% end %>
    </tbody>
  </table>

 

  <% if current_user %>
   <%= link_to 'New post', new_post_path %>
  <% end %>
<br>
